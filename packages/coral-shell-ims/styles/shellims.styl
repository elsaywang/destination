coral-dialog#solutionLinker,coral-dialog#prodInfo {
  z-index:24000 !important;
  >.linkScreen {
    .coral-Dialog-wrapper {
      width:50%;
    }
  }
  .coral-Dialog-wrapper {
    max-width:40%;
    min-width:30%;
    z-index:25000 !important;
    top:35% !important;
    .coral-Dialog-closeButton {
      padding:0rem;
    }
  }
  coral-dialog-header {
    font-weight:500;
    font-size:1rem;
  }
  coral-dialog-content {
    font-size:1.05rem;
    font-weight:300;
    text-align:center;
    div {
      margin-bottom:0.625rem;
    }
  }
  .linkerDiv {
    float:left;
    font-size:0.8rem;
    text-align:right;
    width:50%;
    .linkFormLabel {
      font-weight:400;
    }
  }
  .formDiv {
    text-align:left;
    font-weight:500;
    position:relative;
    .formPart {
      padding-left:10%;
      width:100%;
      height:2.5rem;
      line-height:2.5rem;
      coral-icon.fieldError {
        position:absolute;
        right:10px;
        color:red;
      }
      coral-tooltip {
        width:150px;
      }
    }
    .coral-Link.troubleLink {
      width:60%;
      float:right;
      margin-right:10%;
      line-height:1rem;
    }
  }
  [is=coral-textfield] {
    width:60%;
    float:right;
    margin-right:20%;
  }
  .msgContainer {
    height:6.25rem;
    vertical-align:middle;
    .successMsg {
      background-color: #a5d273;
      margin-left: 2.5rem;
      margin-top: 2.5rem;
      width:75%;
      text-align: left;
      padding: 0.625rem;
      border-radius: 0.3125rem;
    }
  }
}

coral-dialog#prodInfo {
  .coral-Dialog-wrapper {
    max-width:35% !important;
    coral-dialog-content {
      div {
        font-size: 1.15rem;
        font-weight: 400;
        text-align: center;
        line-height: 1.5rem;
        margin-bottom:20px;
      }
    }
  }
}

.waitDivContainer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #000;
  opacity: 0.6;
  .waitDiv {
    position: absolute;
    left: 50%;
    top: 50%;
  }
}

coral-dialog.onTop {
  z-index: 24000 !important;
}

coral-dialog#disambDialog {
  z-index:24000 !important;
  .coral-Dialog-wrapper {
    width: 600px;
    min-height:500px;
  }
  .descriptionTextL1,.descriptionTextL2 {
    font-size: 1.05rem;
    font-weight: 500;
    line-height: 1.4rem;
  }
  .descriptionTextL2 {
    margin-top:1rem;
    line-height: 1.7rem;
  }
  coral-wizardview {
    position:relative;
    .navigators {
      position:absolute;
      top:33%;
      button {
        border-radius:2rem;
        min-width:2.5rem;
        position:absolute;
      }
    }
    .navigators.leftNavigator {
      left:20%;
    }
    .navigators.rightNavigator {
      right:27%;
    }
    coral-panelstack {
      width:40%;
      margin:auto;
      coral-panel {
        padding: 10px;
        border: 1px solid rgb(221, 221, 221);
        .waitDiv {
          top:33%;
          left:47%;
        }
        button {
          margin-top:0.625rem;
          width:100%;
        }
        coral-icon.fieldError {
          color:red;
        }
        .disabledField {
          input {
            background-color:#eee;
            color:#777;
          }
        }
      }
    }
  }
}
